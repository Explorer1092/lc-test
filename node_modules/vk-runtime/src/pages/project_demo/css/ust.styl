// 按钮效果
ust-btn(radius)
  &:after
    content:" "
    position: absolute
    left: 0
    top: 0
    display: inline-block
    width: 100%
    height: 100%
    border-radius: radius
    display: none
  &:hover
    &:after
      background: rgba(255,255,255,0.3)
      display: inline-block
  &:active
    &:after
      background: rgba(0,0,0,0.3)
      display: inline-block
